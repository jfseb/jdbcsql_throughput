{
    "compilerOptions": {
       // "target": "es6",
       "target": "es6",
       //
       "skipLibCheck" : true,
       // "module" : "es6", //'es2015
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
      //  "jsx": "react",
       // "watch" : true,
        // new ^^
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        //"rootDir" : "src",
        "outDir" : "gen_tsc",
        //
        "sourceMap" : true,
        //"inlineSourceMap": true,
        "preserveConstEnums": true,
         //"jsx": "react",
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "src/index.ts",
        "src/interfaces.d.ts",
        "src/runinfork.ts",
        "src/parallel_exec.ts",
        "src/parallel_pool.ts",
        "src/sqlexec.ts",
        "src/sqlexec_remote.ts",
        "src/averages.ts",
        "src/constants.ts"
    ],
    "exclude": [
     "./node_modules"
    ]
}